{
  "name": "atom-growl",
  "author": {
    "name": "Onderweg"
  },
  "main": "./lib/main",
  "version": "0.2.0",
  "description": "Forward Atom notifications to Growl",
  "keywords": [
    "notifications",
    "growl",
    "history"
  ],
  "scripts": {
    "prepublish": "apm test"
  },
  "activationCommands": {},
  "repository": "https://github.com/onderweg/atom-growl",
  "license": "MIT",
  "engines": {
    "atom": ">=1.5.0 <2.0.0"
  },
  "configSchema": {
    "enabledTypes": {
      "type": "string",
      "default": "info, success, warning, error",
      "title": "Enable forwarding for these notification types",
      "description": "Possible values: `info`, `success`, `warning`, `error` (comma separated)"
    },
    "showInStatusbar": {
      "type": "boolean",
      "default": true,
      "description": "Show Growl notification count in statusbar"
    },
    "ignoreWhenFocused": {
      "type": "boolean",
      "default": false,
      "description": "Don't forward to Growl when focused"
    }
  },
  "dependencies": {
    "atom-space-pen-views": "^2.2.0",
    "growly": "^1.2.0",
    "lodash": "^4.5.1"
  }
}
